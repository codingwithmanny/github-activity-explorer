{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es2020": true,
    "jest": true,
    "cypress/globals": true
  },
  "extends": [
    "standard",
    "plugin:cypress/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react/recommended",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier", "cypress", "react", "@typescript-eslint"],
  "rules": {
    "camelcase": "off",
    "react/prop-types": 0,
    "@typescript-eslint/no-unused-vars": ["error"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
